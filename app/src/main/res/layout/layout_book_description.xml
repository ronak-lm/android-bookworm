<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_description_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dist_medium"
    android:orientation="vertical"
    android:padding="@dimen/dist_large"
    android:background="@color/text_secondary"
    tools:showIn="@layout/fragment_book">

    <!-- Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView style="@style/BookDetailIconsStyle"
            android:src="@drawable/icon_description"
            tools:ignore="ContentDescription" />

        <com.ronakmanglani.bookworm.ui.view.RobotoBoldTextView
            style="@style/BookDetailHeaderStyle"
            android:text="@string/detail_description" />

    </LinearLayout>

    <!-- Value -->
    <com.ronakmanglani.bookworm.ui.view.RobotoLightTextView
        android:id="@+id/book_description"
        style="@style/BookDetailValueStyle"
        tools:text="My book description goes here"/>

</LinearLayout>